{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "rules": {
    "semi": ["error", "never"],
    "react/prop-types": "error",
    "react/react-in-jsx-scope": "off",
    "eol-last": ["error", "always"],
    "no-trailing-spaces": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}